{
  "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "Bundler",
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "isolatedModules": true,
      "resolveJsonModule": true,
      "lib": [
          "ESNext",
          "DOM"
      ],
      "rootDir": "src",
      "outDir": "dist"
  },
  "types": ["@edgeone/ef-types"],
  "include": [
      "src/**/*"
  ],
  "exclude": [
      "node_modules",
      "dist",
      "**/*.test.ts"
  ]
}
